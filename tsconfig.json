{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2015"],
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["../node_modules/@types/index.d.ts"]
}
